
{% if data|length >0  %}


    {% set citation = [] %}
    {% set title = [] %}
    {% set address = [] %}
    {% set tel = [] %}
    {% set email = [] %}


    {% set settings = render(controller('AppBundle:Rest/ParentRest:getSettings', {'objectClass':data.getClassName, 'objectId':data.id } ))|json_decode %}

    {% for key, setting in settings %}

        {% if 'citation' in setting.slug %}
            {% set citation = render(controller('AppBundle:Rest/ParentRest:getInfo', {'objectClass':setting.toClassName, 'objectId':setting.toId } ))|json_decode %}
            {% set settings = settings|slice(key) %}
        {% elseif 'title' in setting.slug %}
            {% set title = render(controller('AppBundle:Rest/ParentRest:getInfo', {'objectClass':setting.toClassName, 'objectId':setting.toId } ))|json_decode %}
        {% elseif 'address' in setting.slug %}
            {% set address = render(controller('AppBundle:Rest/ParentRest:getInfo', {'objectClass':setting.toClassName, 'objectId':setting.toId } ))|json_decode %}
        {% elseif 'tel' in setting.slug and 'meta' not in setting.slug %}
            {% set tel = render(controller('AppBundle:Rest/ParentRest:getInfo', {'objectClass':setting.toClassName, 'objectId':setting.toId } ))|json_decode %}
        {% elseif 'email' in setting.slug %}
            {% set email = render(controller('AppBundle:Rest/ParentRest:getInfo', {'objectClass':setting.toClassName, 'objectId':setting.toId } ))|json_decode %}
        {% endif %}
    {% endfor %}

    <section id="contact" class="section-content">
        <div class="container">
            <div class="row mbxxl">
                <div class="col-lg-12">
                    <h2 class="section-heading"><span>{{ title.value|replace({' ':'&nbsp;</span>'})|raw }}</h2>
                    <div class="line"></div>
                    <p class="section-description">{{ citation.value }}</p>
                </div>
            </div>
        </div>
        {#<div id="map" data-wow-delay=".1s" style="width: 100%;height: 400px;" class="wow fadeIn"></div>#}
        <div class="container">
            <form action="#">
                <div class="row mtxxl">
                    <div class="col-lg-6">
                        <h3 class="title">О НАС</h3>
                        <table class="tb-info-us table-striped mbl">
                            <tbody>
                            <tr>
                                <td>Адрес:</td>
                                <td>{{ address.value }}</td>
                            </tr>
                            <tr>
                                <td>Эл. адрес:</td>
                                <td>{% if email.value|split('||')|length >1 %}
                                        {% set em = email.value|split('||') %}

                                        {% for t in em %}
                                            <a  href="mailto:{{ t }}" class="description">{{ t }}</a>
                                        {% endfor %}
                                    {% else %}
                                        <a href="mailto:{{ email.value }}" class="description">{{ email.value }}</a>
                                    {% endif %}</td>
                            </tr>
                            <tr>
                                <td>Телефон:</td>
                                <td>{% if tel.value|split('||')|length >1 %}
                                        {% set tel = tel.value|split('||') %}

                                        {% for t in tel %}
                                            <a href="tel:{{- t -}}" class="description">{{ t }}</a>
                                        {% endfor %}
                                    {% else %}
                                        <a href="tel:{{- tel.value -}}" class="description">{{ tel.value }}</a>
                                    {% endif %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="social"><a href="#" class="ico-socialize-twitter1 ico-socialize type2 ico-lg"><i class="fa fa-twitter"></i></a><a href="#" class="ico-socialize-facebook1 ico-socialize type2 ico-lg"><i class="fa fa-facebook"></i></a><a href="#" class="ico-socialize-google2 ico-socialize type2 ico-lg"><i class="fa fa-google-plus"></i></a><a href="#" class="ico-socialize-dribbble1 ico-socialize type2 ico-lg"><i class="fa fa-twitter"></i></a><a href="#" class="ico-socialize-youtube1 ico-socialize type2 ico-lg"><i class="fa fa-youtube"></i></a><a href="#" class="ico-socialize-pinterest ico-socialize type2 ico-lg"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="row">
                            {{ form_start(form, {'attr':{'class':'form'}}) }}
                            <div class="col-lg-6 mbm">
                                {{ form_widget(form.name) }}
                            </div>
                            <div class="col-lg-6 mbm">
                                {{ form_widget(form.email) }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_widget(form.phone) }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_widget(form.message) }}
                            </div>
                            <div class="col-lg-4">
                                <button type="submit" class="btn btn-primary btn-block">Отправит</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endif %}

